<div class="p-3 text-center">
  <div class="text-center">
    <h2>Lista de productos</h2>
  </div>
  <div class="tableContainer">
    {{#if isEmpty}}
      <div class="alert alert-info d-flex justify-content-center" role="alert">
        <h2>No hay productos disponibles</h2>
      </div>
    {{else}}
      <table class="productTable table table-striped">
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Thumbnail</th>
        </tr>
        {{#each productList as |product|}}
          <tr>
            <td>{{product.name}}</td>
            <td>{{product.price}}</td>
            <td>{{product.stock}}</td>
            <td><img src={{product.imgUrl}} alt="" /></td>
          </tr>
        {{/each}}
      </table>
  </div>
  {{/if}}
</div>